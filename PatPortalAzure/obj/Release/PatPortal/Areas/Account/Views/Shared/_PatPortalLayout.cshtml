<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("../../Content/styles/kendo.default.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("../../Content/styles/kendo.common.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("../../Content/styles/styles.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("../../Content/js/jquery-1.7.1.min.js")" type="text/javascript"></script>
</head>
<body>
    <div class="LoginTopLine">
        &nbsp;</div>
    <div class="MainWrapperWidth LoginPage">
        <div class="LoginLeft">
            <div class="LoginLeftImage">
                <img src="@Url.Content("/Content/images/Security.jpg")" width="475" height="340" alt="" />
            </div>
            <div id="text" class="LoginIntro">
                <h1>
                    Cal-Med Patient Portal</h1>
                <p>
                    Welcome to the patient portal. The patient portal provides a secure private communication
                    channel with your clinic, online access to healthcare related information, your
                    personal health record, and related products and services</p>
            </div>
        </div>
        <div class="LoginRight">
            <div class="LogoMail">
                <img src="/Content/images/logo_mail.png" alt="" /></div>
           @RenderBody()
        </div>
        <div class="ClearFloat">
        </div>
        <div class="FooterMain">
            <div class="Copyright">
                ©2012 Patient Portal <a href="@Url.Content("/Account/Terms")">Terms</a> <a href="@Url.Content("/Account/Privacy")">Privacy</a>
            </div>
            <div class="FooterRight">
                <a href="@Url.Content("/Account/Help")" id="ftrHelp">Help Center</a><a href="@Url.Content("/Account/Feedback")" id="ftrFdbk">Feedback</a></div>
            <div class="ClearFloat">
            </div>
        </div>
    </div>
</body>
</html>
